<!doctype html>
<html lsng="en">
<head>
	<meta charse="UTF-8">
	<title>Tripper</title>
	<link rel="stylesheet" href="bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body >
	<div class="container">
			<h1>Tripper</h1>
			<ul class="nav nav-pills">
				<li id="home"><a href="#">חיפוש טיול</a></li>
				<li id="showTrips"><a href="#">החשבון שלי</a></li>
				<li ><a href="#">המועדפים שלי</a></li>
				<li><a href="#">המסלול שלי</a></li>
				<li id="addTrip"><a href="#">הוספת טיול</a></li>
			</ul>
		<section id="homeSec">
			<div id="groupButton">
				
				<% for (var j =0; j<character.length; j++) {%>
				<button class="btn"><%=character[j] %></button>
				<% } %>
			</div>	
		
			<section id="resultTrip">
				<% for (var i in trips) {%>
					<li class="listResultTrip"> <%= "שם הטיול: "+trips[i].trip_name + " תיאור-הטיול:  " + trips[i].trip_description + "מיקום: "+ trips[i].location + "תכונות: " + trips[i].trip_charachters[0].charachter+" "+trips[i].trip_charachters[1].charachter %></li>
					<% } %>
			</section>
			<section id="myChoose">
			</section>
		</section>	

		<section id="showTripsSec">
			<ul id="displayTrip">
				<% for ( i =0; i<trips.length; i++) {%>
				<li> <%= "שם הטיול: "+trips[i].trip_name + " תיאור-הטיול:  " + trips[i].trip_description + "מיקום: "+ trips[i].location + "תכונות: " + trips[i].trip_charachters[0].charachter+" "+trips[i].trip_charachters[1].charachter %></li>
				<% } %>
			</ul>
		</section>

		<section id="addTripSec">
			<form action="/add" method="post">
				<label>שם או אזור הטיול <br>
					<input type="text" name="nameTrip">
				</label><br>
				<label>תאור הטיול<br>
					<textarea type="text" name="des"></textarea>
				</label><br>
				<label>מיקום הטיול: <br>
					<input type="text" name="locationTrip">
				</label><br>
				<label>תכונות הטיול: <br>
					<input type="text" name="char1">
					<input type="text" name="char2">
				</label>
				<br>
				<input type="submit">
			</form>
		</section>
	</div>
	
	<script src="jquery/dist/jquery.js"></script>
	<script type="text/javascript" src="bootsrtap/dist/js/bootstrap.js"></script>
	<script type="text/javascript" src="../functionTrip.js"></script>
</body>
</html>